{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/send",
        "function": "send"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm install --prefix \"$RESOURCE_DIR\" && npm run lint --prefix \"$RESOURCE_DIR\""
    ]
  }
}
